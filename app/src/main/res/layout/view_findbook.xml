<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_top_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <io.legado.app.ui.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_searchview"
            android:focusable="false"
            android:imeOptions="actionSearch"
            android:theme="?attr/actionBarStyle"
            app:defaultQueryHint="搜索"
            app:queryBackground="@null"
            app:searchHintIcon="@drawable/ic_search_hint"
            app:submitBackground="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="end">

            <Button
                android:id="@+id/publish_findbook"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布找书贴" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_top_search">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="全部"
            android:textSize="12sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="暂无答案"
            android:textSize="12sp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="已有最佳答案"
            android:textSize="12sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
